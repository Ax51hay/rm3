  keywords = {type: conference paper, voice assitant, conversational user interface, office, proactive, ubiquitous, health, well-being, knowledge worker, voice user interfaces},
  numpages = {14},
  publisher = {Association for Computing Machinery},
  series = {CUI '24},
  title = {WorkFit: Designing Proactive Voice Assistance for the Health and Well-Being of Knowledge Workers},
